<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvTrackNo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="3"
        android:maxLines="1"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/textColorSecondary"
        android:padding="@dimen/small_100"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTrackName"
        app:layout_constraintBottom_toBottomOf="@id/tvTrackArtists"
        app:layout_constraintWidth_percent="0.15"
        />

    <TextView
        android:id="@+id/tvTrackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Eminem"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/textColorPrimary"
        android:padding="@dimen/small_50"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTrackNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        />

    <TextView
        android:id="@+id/tvTrackArtists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Eminsem"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/textColorSecondary"
        android:padding="@dimen/small_50"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName"
        app:layout_constraintStart_toStartOf="@id/tvTrackName"
        app:layout_constraintEnd_toEndOf="@id/tvTrackName"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>